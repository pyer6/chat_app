<% unless current_user.favoriting?(chatroom) %>
  <%= form_with(model: current_user.user_chatrooms.build, local: true) do |f| %>
    <%#= hidden_field_tag :follow_id, user.id %>
    <%= f.hidden_field :chatroom_id, :value => chatroom.id %>
    <%= f.submit "マイルーム登録", class: "btn btn-primary btn-sm" %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.user_chatrooms.find_by(chatroom_id: chatroom), local: true, method: :delete) do |f| %>
    <%= f.hidden_field :chatroom_id, :value => chatroom.id %>
    <%= f.submit "マイルーム解除", class: "btn btn-danger btn-sm" %>
  <% end%>
<% end %>