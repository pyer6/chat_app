<div class="col-sm-9 offset-sm-1">
  <div class="mb-3">
    <span style="border-bottom: solid 1px;"><%= "#{@chatroom.name}の部屋" %></span>
    <%= link_to "ルームへ戻る", chatroom_path(@chatroom), class: "btn btn-primary btn-sm ml-2" %>
  </div>
  
  <div class="text-center mb-5">
    <h2><span style="border-bottom: solid 2px;"><%= yield(:title) %></span></h2>
  </div>
  
  <%= form_with(model: @question, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th><%= f.label :title, 'タイトル' %></th>
          <td><%= f.text_field :title, class: 'form-control border_none' %></td>
        </tr>
        <tr>
          <th><%= f.label :detail, '詳細' %></th>
          <td><%= f.text_area :detail, class: 'form-control border_none', placeholder:"内容を詳しく書いてみましょう。的確な回答を得やすくなります。", size: "25x7" %></td>
        </tr>
      </tbody>
    </table>
    
    <%= f.hidden_field :chatroom_id, :value => chatroom_id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    
    <%= f.submit yield(:button), class: 'btn btn-primary btn-block' %>
  <% end %>
</div>
<div class="col-sm-2"></div>