<div class="col-sm-8 ">
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ChatApp</h1>
      <p>ChatAppの説明</p>
    </div>
  </div>
  <%= form_with(model:@chatroom , local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, '名前検索' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  <% end %>
  
  <% if logged_in? %>
    <div class="room_name">
      <ul class="list-unstyled">
        <%#= render 'chatrooms/chatroom', chatrooms: @chatrooms %>
        <%= render @chatrooms   %>
      </ul>
    </div>
  <% end %>
</div>