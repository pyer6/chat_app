<div class="col-sm-8 ">
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ChatApp</h1>
      <p>ChatAppの説明</p>
    </div>
  </div>
  <%= form_with(local: true, method: :get) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'ルーム検索' %>
      <%= f.text_field :name, value: @setting.name, class: 'form-control' %>
      <div class="text-right">
        <%= f.submit "検索", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  
  <div class="room_name">
    <ul class="list-unstyled">
      <%= render @chatrooms %>
      <%= paginate @chatrooms %>
    </ul>
  </div>
</div>


